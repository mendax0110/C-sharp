<Window x:Class="DifferentialEquations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DifferentialEquations"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Canvas Width="200" Background="Gray">
            <Button x:Name="ButtonToSolve" Content="Solve" Canvas.Left="18" Canvas.Top="110" Height="48" Width="164" Click="ButtonToSolve_Click"/>
            <TextBox x:Name="EQToSolve" Canvas.Left="18" TextWrapping="Wrap" Text="" Canvas.Top="49" Width="164" Height="34" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="EQToSolve_TextChanged"/>
            <Label Content="Input Equations:" Canvas.Left="18" Canvas.Top="18"/>

        </Canvas>
        <Canvas>
            <TextBox x:Name="SolvedEQ" Canvas.Left="117" TextWrapping="Wrap" Text="" Canvas.Top="64" Width="323" Height="79" TextChanged="SolvedEQ_TextChanged"/>
            <Label Content="Output Equations:" Canvas.Left="117" Canvas.Top="33"/>
        </Canvas>
    </DockPanel>
</Window>
