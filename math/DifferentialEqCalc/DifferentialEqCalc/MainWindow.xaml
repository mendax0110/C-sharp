<Window x:Class="DifferentialEqCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Differential Equation Calculator" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Equation:"/>
            <TextBox x:Name="EquationTextBox" Width="150"/>
            <Button x:Name="CalculateButton" Content="Calculate" Click="CalculateButton_Click"/>
        </StackPanel>
        <Canvas x:Name="GraphCanvas" Grid.Row="1"/>
    </Grid>
</Window>
