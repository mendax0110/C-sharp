<Window x:Class="DifferentialCalculus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Numerical Differentiation" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Data"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="dataTextBox"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Differentiated Data"/>
        <oxy:PlotView Model="{Binding PlotModel}" Grid.Column="1" Margin="10,7,10,10" Grid.Row="2" Height="NaN" Width="NaN" />
        <Button Grid.Row="2" Grid.Column="0" x:Name="differentiateButton" Content="Differentiate" Click="differentiateButton_Click" Height="NaN" Margin="5,10,5,229" Width="NaN"/>
    </Grid>
</Window>
