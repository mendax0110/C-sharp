<Window x:Class="SwitchSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        Title="Switch Simulator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Label Content="Input Voltage:" Margin="0,0,5,0"/>
            <TextBox x:Name="InputVoltageTextBox" Width="100" Text="10"/>
            <Label Content="V" Margin="5,0,0,0"/>
            <Button x:Name="SwitchButton" Content="Switch" Click="SwitchButton_Click" Margin="20,0,0,0"/>
            <Label Content="Output Voltage:" Margin="20,0,5,0"/>
            <TextBox x:Name="OutputVoltageTextBox" Width="100" Margin="0,0,20,0" IsReadOnly="True"/>
            <Label Content="V" Margin="5,0,0,0"/>
        </StackPanel>
        <Grid x:Name="GraphGrid" Grid.Row="2">
            <oxy:PlotView/>
        </Grid>
    </Grid>
</Window>
