<Window x:Class="LTSpiceAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="LTspice Data Viewer" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="LoadDataButton" Content="Load Data" Click="LoadDataButton_Click" Margin="5"/>
            <Button Name="ClearDataButton" Content="Clear Data" Click="ClearDataButton_Click" Margin="5"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <oxy:PlotView Name="PlotView" Margin="10"/>
        </Grid>
    </Grid>
</Window>
